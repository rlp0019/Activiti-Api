<?xml version="1.0" encoding="UTF-8"?>
<project  name="Activiti-api" basedir="." default="distr" xmlns:jacoco="antlib:org.jacoco.ant">
  <description>
    Trabajo de Fin de Grado sobre Activiti-Api.
  </description>

  <property name="src.dir" value="src"/>
  <property name="tests.dir" value="test/"/>
  <property name="build.dir" value="build/main"/>
  <property name="build.tests.dir" value="build/test"/>
  <property name="dist.dir" value="dist"/>
  <property name="dclase.dir" value="rsc/DiagramasClase"/>
  <property name="dsecuencia.dir" value="rsc/DiagramasSecuencia"/>
  <property name="imagenes.dir" value="src/imagenes"/>
  <property name="ayuda.dir" value="src/gui/ayuda"/>
  <property name="libclasses.dir" value="libc"/>
	
  <path id="compile.path">
  	<pathelement location="rsc/lib/gson-2.3.1.jar"/>
  	<pathelement location="rsc/lib/javahelp-2.0.05.jar"/>
  	<pathelement location="rsc/lib/jcommon-1.0.23.jar"/>
  	<pathelement location="rsc/lib/jfreechart-1.0.19.jar"/>
  	<pathelement location="rsc/lib/org.eclipse.egit.github.core-2.1.5.jar"/>
  </path>
	
  <path id="compile.tests.path">
  	<path refid="compile.path"/>
  	<pathelement location="rsc/lib/jacocoant.jar"/>
  	<pathelement location="rsc/lib/junit.jar"/>
  	<pathelement location="${build.dir}"/>
  </path>
	
  <taskdef uri="antlib:org.jacoco.ant" resource="org/jacoco/ant/antlib.xml">
    <classpath path="rsc/lib/jacocoant.jar"/>
  </taskdef>
	
  <target name="inicio" description="Crea timestamp y carpetas">
  	<!-- Crea el timestamp--> 
  	<tstamp/>
  	
  	<!-- Crea las carpetas de la build -->
  	<mkdir dir="${build.dir}"/>
  	
  	<!-- Crea la carpeta de la distribución -->
  	<mkdir dir="${dist.dir}"/>
  	
  	<!-- Crea la carpeta de las class de librerias -->
  	<mkdir dir="${libclasses.dir}"/>
  	
  	<!-- Crea la carpeta de las class de tests -->
  	<mkdir dir="${build.tests.dir}"/>
  </target>
	
  <target name="compilar" depends="inicio" description="Compila el programa">
  	<javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false" debug="true" classpathref="compile.path"/>
  </target>
	
  <target name="compilar-tests" depends="compilar" description="Compila el programa">
  	<javac srcdir="${tests.dir}" destdir="${build.tests.dir}" includeantruntime="false" debug="true" classpathref="compile.tests.path"/>
  </target>
	
  <target name="tests" depends="compilar-tests">
    <jacoco:coverage>
  	  <junit printsummary="on" haltonfailure="no" fork="true">
  	    <classpath>
  	      <path refid="compile.tests.path"/>
  	      <pathelement location="${build.tests.dir}"/>
  	    </classpath>
  	    <formatter type="brief" usefile="false" />
  	    <batchtest>
  	      <fileset dir="${tests.dir}" includes="**/*Test.java" />
  	    </batchtest>
  	  </junit>
  	</jacoco:coverage>
  	
  	<jacoco:report>
  	  <executiondata>
  	    <file file="jacoco.exec"/>
  	  </executiondata>
  	  <structure name="Activiti-Api">
  	    <classfiles>
  	      <fileset dir="${build.dir}"/>
  	      <fileset dir="${build.tests.dir}"/>
  	    </classfiles>
  	    <sourcefiles encoding="UTF-8">
  	      <fileset dir="${src.dir}" includes="**/*.java"/>
  	      <fileset dir="${tests.dir}" includes="**/*Test.java"/>
  	    </sourcefiles>
  	  </structure>
  	  <html destdir="report"/>
  	  <xml destfile="report.xml"/>
  	</jacoco:report>
  </target>
	
  <target name="distr" depends="inicio,compilar" description="Genera la distribución">
  	<unjar dest="${libclasses.dir}">
  	  <fileset dir="rsc/lib" includes="*.jar"/>
  	</unjar>
  	
	<!-- Toda la build al .jar -->
	<jar jarfile="${dist.dir}/Activiti-${DSTAMP}.jar" basedir="${build.dir}">
	  <manifest>
	  	<attribute name="Main-Class" value="gui/Principal"/>
	  </manifest>
		
	  <!-- Incluyo el resto de archivos -->
	  <zipfileset dir="${dclase.dir}" prefix="${dclase.dir}"/>
	  <zipfileset dir="${dsecuencia.dir}" prefix="${dsecuencia.dir}"/>
	  <zipfileset dir="${imagenes.dir}" prefix="imagenes"/>
	  <zipfileset dir="${ayuda.dir}" prefix="gui/ayuda"/>
	  <zipfileset dir="${libclasses.dir}"/>
	</jar>
  </target>
	
  <target name="limpiar" description="Elimina las carpetas creadas">
	<!-- Elimina las carpertas y archivos creados -->
    <delete dir="build"/>
	<delete dir="${dist.dir}"/>
  	<delete dir="${libclasses.dir}"/>
  	<delete dir="report"/>
  	<delete file="jacoco.exec"/>
  	<delete dir="Activiti-api/build"/>
  	<delete dir="Activiti-api/bin"/>
  </target>
</project>
